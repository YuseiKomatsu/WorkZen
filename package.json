{
  "name": "focus-timer",
  "version": "3.1.0",
  "description": "A focus timer application using Electron",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "watch": "nodemon --exec electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --publish never",
    "dist:mac": "electron-builder --mac --publish never",
    "dist:win": "electron-builder --windows --publish never",
    "dist:linux": "electron-builder --linux --publish never"
  },
  "author": {
    "name": "Yusei Komatsu",
    "email": "komatsu@eagle.sophia.ac.jp"
  },
  "license": "CC BY-NC-ND",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "nodemon": "^3.0.2"
  },
  "build": {
    "appId": "com.yuseikomatsu.focustimer",
    "productName": "focustimer",
    "directories": {
      "output": "release",
      "buildResources": "."
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "!**/node_modules/*",
      "!build.js",
      "!release/*",
      "!dist/*"
    ],
    "mac": {
      "target": {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      },
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ]
    }
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "ionicons": "^7.4.0",
    "react-native-vector-icons": "^10.1.0"
  }
}
