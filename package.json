{
  "name": "focus-timer",
  "version": "3.0.0",
  "author": "Yusei Komatsu",
  "license": "ISC",
  "description": "A focus timer application using Electron",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.example.app",
    "productName": "Focus Timer",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "index.html",
      "preload.js",
      "script.js",
      "script-stretch.js",
      "stretch.html",
      "style.css",
      "style-stretch.css",
      "stretches.json",
      "assets/**/*"
    ],
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    }
  },
  "devDependencies": {
    "electron": "^13.1.7",
    "electron-builder": "^22.14.13"
  }
}
