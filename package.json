{
  "name": "focus-timer",
  "version": "3.0.0",
  "author": "Yusei Komatsu",
  "license": "ISC",
  "description": "A focus timer application using Electron",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.example.focus-timer",
    "mac": {
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": ["AppImage", "snap"],
      "category": "Utility"
    }
  },
  "devDependencies": {
    "electron": "^13.1.7",
    "electron-builder": "^22.14.13"
  }
}