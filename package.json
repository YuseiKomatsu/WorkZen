{
  "name": "focus-timer",
  "version": "3.0.3",
  "description": "A focus timer application using Electron",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win",
    "dev": "nodemon --exec electron ."
  },
  "author": {
    "name": "Yusei Komatsu",
    "email": "komatsu@eagle.sophia.ac.jp"
  },
  "license": "CC BY-NC-ND",
  "devDependencies": {
    "electron": "^21.0.0",
    "electron-builder": "^23.0.0",
    "nodemon": "^3.1.4"
  },
  "build": {
    "files": [
      "images/**/*",
      "fonts/**/*",
      "main.js",
      "preload.js",
      "index.html",
      "stretch.html",
      "style.css",
      "style-stretch.css",
      "script.js",
      "script-stretch.js",
      "stretches.json"
    ],
    "directories": {
      "output": "dist"
    },
    "appId": "com.yuseikomatsu.focustimer",
    "productName": "focustimer",
    "win": {
      "target": [
        "nsis",
        "zip"
      ]
    },
    "publish": {
      "provider": "github"
    }
  }
}
